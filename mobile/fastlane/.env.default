# Fastlane Environment Variables Template
# Copy this file to .env and fill in your values
# NEVER commit .env to git (it's in .gitignore)

# ============================================================================
# ANDROID CONFIGURATION
# ============================================================================

# Path to your Android keystore file (relative to mobile/ directory)
KEYSTORE_PATH=path/to/your/keystore.jks

# Keystore password
KEYSTORE_PASSWORD=your_keystore_password

# Key alias within the keystore
KEY_ALIAS=your_key_alias

# Key password (often same as keystore password)
KEY_PASSWORD=your_key_password

# Path to Google Play Console service account JSON
# Generate at: Play Console -> Setup -> API access -> Service accounts
PLAY_STORE_JSON_KEY=fastlane/play-store-credentials.json

# ============================================================================
# iOS CONFIGURATION
# ============================================================================

# Your Apple ID (email used for App Store Connect)
APPLE_ID=your-apple-id@email.com

# Apple Developer Team ID (alphanumeric, e.g., "ABC123XYZ")
# Find at: https://developer.apple.com/account -> Membership
APPLE_TEAM_ID=YOUR_TEAM_ID

# App Store Connect Team ID (numeric)
# Find at: App Store Connect -> Users and Access
ITC_TEAM_ID=123456789

# Git URL for certificate storage (private repo)
MATCH_GIT_URL=https://github.com/asterixorobelix/fastlane-certificates

# Password for encrypting certificates in the git repo
MATCH_PASSWORD=your_secure_password_for_certificates

# ============================================================================
# APP STORE CONNECT API KEY (required for CI TestFlight/App Store uploads)
# ============================================================================

# Create at: https://appstoreconnect.apple.com/access/integrations/api
# Role: App Manager (or Admin)
ASC_KEY_ID=YOUR_KEY_ID
ASC_ISSUER_ID=YOUR_ISSUER_ID
# Base64 encode the .p8 file: base64 -i AuthKey_XXXXX.p8
ASC_KEY_CONTENT=base64_encoded_p8_file_content

# ============================================================================
# CI/CD CONFIGURATION (GitHub Actions, etc.)
# ============================================================================

# For GitHub Actions, these are set as repository secrets
# MATCH_GIT_BASIC_AUTHORIZATION=base64_encoded_token
# MATCH_KEYCHAIN_NAME=fastlane_keychain
# MATCH_KEYCHAIN_PASSWORD=temporary_keychain_password

# ============================================================================
# OPTIONAL CONFIGURATION
# ============================================================================

# Slack webhook for notifications (optional)
# SLACK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Firebase App Distribution (alternative beta distribution)
# FIREBASE_APP_ID_ANDROID=1:123456789:android:abc123
# FIREBASE_APP_ID_IOS=1:123456789:ios:xyz789
# FIREBASE_TOKEN=your_firebase_ci_token
