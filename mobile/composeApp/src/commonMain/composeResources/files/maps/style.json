            "properties": { "name": "Cactus Rising", "type": "camp" },
            "geometry": { "type": "Point", "coordinates": [19.4450, -32.3540] }
          },
          {
            "type": "Feature",
            "properties": { "name": "Zodiac", "type": "camp" },
            "geometry": { "type": "Point", "coordinates": [19.4475, -32.3455] }
          },
          {
            "type": "Feature",
