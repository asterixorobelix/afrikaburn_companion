          }
        ]
      }
    },
    "artworks": {
      "type": "geojson",
      "data": {
        "type": "FeatureCollection",
        "features": [
          {
            "type": "Feature",
            "properties": { "name": "Bee Cool Build", "artist": "Megan Cleary", "type": "artwork" },
            "geometry": { "type": "Point", "coordinates": [19.4500, -32.3500] }
          },
          {
            "type": "Feature",
            "properties": { "name": "OBSCURA", "artist": "Tiaan van Deventer", "type": "artwork" },
            "geometry": { "type": "Point", "coordinates": [19.4510, -32.3485] }
          },
          {
            "type": "Feature",
            "properties": { "name": "Twist", "artist": "Mari Schroeder", "type": "artwork" },
            "geometry": { "type": "Point", "coordinates": [19.4490, -32.3515] }
          },
          {
            "type": "Feature",
            "properties": { "name": "Star Tree 3", "artist": "Conrad Hubbe", "type": "artwork" },
            "geometry": { "type": "Point", "coordinates": [19.4525, -32.3475] }
          },
          {
            "type": "Feature",
            "properties": { "name": "Song Catcher", "artist": "Charles Starling", "type": "artwork" },
            "geometry": { "type": "Point", "coordinates": [19.4480, -32.3530] }
          },
          {
