{
  "version": 8,
  "name": "AfrikaBurn Dark",
  "metadata": {
    "description": "Dark mode offline map style for Tankwa Karoo region"
  },
  "sources": {
    "openmaptiles": {
      "type": "vector",
      "url": "pmtiles://asset://files/maps/tankwa-karoo.pmtiles"
    },
    "camps": {
      "type": "geojson",
      "data": {
        "type": "FeatureCollection",
        "features": [
          {
            "type": "Feature",
            "properties": { "name": "The Vagabonds", "type": "camp" },
            "geometry": { "type": "Point", "coordinates": [19.4485, -32.3480] }
          },
          {
